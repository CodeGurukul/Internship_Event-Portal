  br

  .container.jumbotron
    .row
      .col-md-6.col-md-offset-4

        p upload an image/poster for the event
        form#uploadForm(enctype='multipart/form-data', action='/api/photo', method='post')
              input.btn-default.btn(type='file', name='eventPoster')
              input.btn.btn-default(type='submit', value='Upload Image', name='submit')
          script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
          script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js')
          script.
            $(document).ready(function() {
            $('#uploadForm').submit(function() {
            $(this).ajaxSubmit({
            error: function(xhr) {
            status('Error: ' + xhr.status);
            },
            success: function(response) {
            console.log(response);
            }
            });
            return false;
            });
            });

        form(action='/add-event' method='post')
          .loc
            input.form-control#autocomplete(placeholder='Enter Location', onfocus='geolocate()', type='text',name="eventLocation")
          input.form-control(type='text' placeholder='Event Name' name="eventName" required)
          input.form-control(type='date' placeholder='Start Date' name="eventStartDate")
          input.form-control(type='date' placeholder='End Date' name="eventEndDate")
          input.form-control(type='text' placeholder='Start Time' name="eventStartTime")
          input.form-control(type='text' placeholder='Duration' name="eventDuration")
          input.form-control(type='text' placeholder='description' name="eventDescription")
          select#dropcat(name="eventCategory" required)
            option(value='Conference' ) Conference
              |   
              option(value='Hackathon') Hackathon
              |   
              option(value='Meet Ups') Meet Ups
              |   
              option(value='Workshops') Workshops
          br
          br
          button#submitaddevent.btn.btn-default(type='submit') Submit
      
