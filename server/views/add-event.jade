extends ./includes/layout
block main
  br
  br
  br
  br
  br

  #jumbo3.container.jumbotron
    .row
      .col-xs-8.col-sm-6.col-md-6.col-lg-6.col-xs-offset-2.col-sm-offset-3.col-md-offset-3.col-lg-offset-3.bg-color4
        .col-md-12(style="top: 15px; padding-bottom: 15px")
          .jumbotron.bg-color1.text-center
            h2 Add an event
        .col-md-12(style=" padding-bottom: 15px")
        
          form(action='/add-event' method='post')

            .form-group
              label(for='eventName') Event Name:
              input.form-control(type='text' placeholder='Event Name' name="eventName" required)
            
            .form-group
              label(for='') Event starts on:
              input.form-control(type='date' placeholder='Start Date' name="eventStartDate")
            
            .form-group
              label(for='') Event ends on:
              input.form-control(type='date' placeholder='End Date' name="eventEndDate")
            
            .form-group
              label(for='') Event start Time:
              input.form-control(type='text' placeholder='Start Time' name="eventStartTime")
            
            .form-group
              label(for='') Duration of event
              input.form-control(type='text' placeholder='Duration' name="eventDuration")
            
            .form-group
              label(for='') Describe the event:
              textarea.form-control(rows='3' placeholder='description' name="eventDescription")

            .form-group
              label(for='Location') Where is the event?:
              .loc
                input#autocomplete.addeventloc.form-control(placeholder='Enter Location', onfocus='geolocate()', type='text',name="eventLocation")
            
            br
            br
            .form-group
              label(for='privateEvent') Is the event private?
              .radio
                label
                  input(type="radio", name="privateEvent", id="privateEvent", value="1", checked="checked")
                  | It is a private event, people cannot join without invitation
              .radio
                label
                  input(type="radio", name="privateEvent", id="openEvent", value="0", checked="unchecked")
                  | It is a open event, people can join without invitation
            br
            label(for='dropdown') Type of event
            select.form-control#dropcat(name="eventCategory" required)
              option(value='Conference') Conference
              |   
              option(value='Hackathon') Hackathon
              |   
              option(value='Meet Ups') Meet Ups
              |   
              option(value='Workshops') Workshops
            br
            br
            br
            .row
              //- .col-xs-12.col-sm-12.col-md-12.col-lg-12.text-center
              .col-xs-10.col-sm-6.col-md-4.col-lg-4.col-xs-offset-1.col-sm-offset-3.col-md-offset-4.col-lg-offset-4
                .form-group
                  button.btn.btn-center.btn-block.btn-custom1.btn-lg(type='submit') Submit