extends ./includes/layout
block main
  .container
    .row
      .col-md-6.col-md-offset-4.text-center
        form(action="/add-event")
          button.btn.btn-primary(type='submit') Add Event
    each val in event
      .row
        .col-md-6.col-md-offset-4.jumbotron
          p= val.name
          p= val.featured
          p= val.published
          form(action="/display-event/"+val._id method="post")
              button.btn.btn-default(type='submit') Details        
          form(action="/deletecourse/"+val._id method="post")
              button.btn.btn-default(type='submit') Delete        
