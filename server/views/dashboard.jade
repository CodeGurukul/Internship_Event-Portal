extends ./includes/layout
block main
	h1#userdethead User Details:
	hr
	#userdet.container
		.row
			.col-md-12
				#panelbck.panel.panel-primary
					#panelhead.panel-heading
						h1.panel-title #{user.profile.name}
					#panelbody.panel-body
						ul
							li Email:   #{user.email}
							li Gender:  #{user.profile.gender}
							li location:#{user.profile.location}
				hr
				
				h2#heading1 You are invited to the following events:
				if(invites.length==0)
					h3.jumbotron No Invitations
				else
					each val in invites
						if(val)
							#jumbo1.jumbotron
								ul
									p Name :#{val.profile.title}
									p Location: #{val.profile.location}
									p Cateory: #{val.profile.category}
									p Description: #{val.profile.desc}
									if(val.status)
										P#status1 Status :Cancelled
								form(action="/confirm-event/"+val._id method="post")
									.btn-group(data-toggle='buttons')
										h2 Invitations:
										label#option1.btn.btn-primary.active
											input(type='radio', name='options', autocomplete='off', checked='' value='confirm')
											|  Confirm-event
										label#option2.btn.btn-primary
											input(type='radio', name='options', autocomplete='off' value='reject')
											|  Reject-Event
									button#option3.btn.btn-primary(type='submit') Submit
								form(action="/display-event/"+val._id method="post")
									button.btn.btn-default(type='submit') Details
				h2#heading2 You are attending to the following events:
				if(attending.length==0)
					h3#jumbo2.jumbotron You are Not attending  any events
				else
					each val in attending
						if(val)
							#jumbo2.jumbotron
								ul
									p Name :#{val.profile.title}
									p Location: #{val.profile.location}
									p Cateory: #{val.profile.category}
									p Description: #{val.profile.desc}
									if(val.status)
										P Status :Cancelled
								form(action="/unregister-event/"+val._id method="post")
									button.btn.btn-primary(type='submit') Unregister-Event
								form(action="/display-event/"+val._id method="post")
									button.btn.btn-default(type='submit') Details 							
				h2#heading3 You created the following events:
				if(eventsCreated.length==0)
					h3#jumbo3.jumbotron You have not created any events
				else
					each val in eventsCreated
						if(val)
							#jumbo3.jumbotron
								ul
									p Name :#{val.profile.title}
									p Location: #{val.profile.location}
									p Cateory: #{val.profile.category}
									p Description: #{val.profile.desc}
									if(val.status) 
										P Status :Cancelled
								form#unregeve(action="/unregister-event/"+val._id method="post")
									button.btn.btn-primary(type='submit') Unregister-Event
								#canceleve.form(action="/cancel-event/"+val._id method="post")
									button.btn.btn-primary(type='submit') Cancel-Event
								#details.form(action="/display-event/"+val._id method="post")
									button.btn.btn-default(type='submit') Details 		
								#attendi.button.btn.btn-primary.btn-lg(data-toggle='modal', data-target='#myModal') Attendees
								#myModal.modal.fade.bs-modal-xs(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
									.modal-dialog
										.modal-content
											.modal-header
												button.close(type='button', data-dismiss='modal', aria-hidden='true')
												| Ã—
												h4#myModalLabel.modal-title
												| People Attending My Event
												.modal-body
													each item in val.att 
														.container-fluid
															.row
																.col-md-6.attendeesimg
																	img.img-circle(src=item.profile.picture)
																.col-md-6
																	h3= item.profile.name
														hr(style="height:1px;border:none;color:#333;background-color:#333;") 
												.modal-footer
													button.btn.btn-default(type='button', data-dismiss='modal')| Close
													





